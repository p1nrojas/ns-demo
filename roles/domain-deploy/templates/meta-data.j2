instance-id: {{ inventory_hostname }}
local-hostname: {{ inventory_hostname }}
network-interfaces: |
  auto eth0
  iface eth0 inet static
    gateway {{ gateway }}
    address {{ interfaces.mgmt.ip }}
    netmask {{ if_mgmt.mask }}
  auto eth1
  iface eth1 inet static
    address {{ interfaces.data.ip }}
    netmask {{ if_data.mask }}
